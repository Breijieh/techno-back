<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with minimal formatting -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce noise from Spring Framework -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.test" level="WARN"/>
    
    <!-- Reduce noise from Hibernate -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
    
    <!-- Reduce noise from HikariCP -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    
    <!-- Reduce noise from H2 Database -->
    <logger name="org.h2" level="WARN"/>
    
    <!-- Application logging (adjust as needed) -->
    <logger name="com.techno.backend" level="INFO"/>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
